<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView android:layout_height="wrap_content"
        android:layout_width="match_parent">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/icon_info"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/title_info"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/icon_info"
                android:text="Hello"/>
            <TextView
                android:id="@+id/magnitude"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon_info"
                android:layout_below="@+id/title_info"
                android:text="Magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/magnitude"
                android:layout_alignBottom="@+id/magnitude"
                android:layout_marginLeft="8dp"
                android:id="@+id/btn_more_info"
                android:text="More Info.."
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent"/>

            
            
            
            
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>